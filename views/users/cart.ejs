<div class="container my-5 col-md-10 col-sm-12" style="min-height: 50vh">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
      <li class="breadcrumb-item active" aria-current="page">Cart</li>
    </ol>
  </nav>

  <div class="container my-4">
    <div class="row">
      <!-- Cart Items -->
      <h2 class="mb-4">Your Cart</h2>
      <div class="col-md-8 pe-5">
        <% if (cart && cart.items.length > 0) { %>
          <% cart.items.forEach(item => { %>
            <div class="cart-item d-flex justify-content-between align-items-center mb-3">
              <div class="d-flex align-items-center">
                <img src="<%= item.image %>" alt="Product Image" class="me-3" style="width: 100px; height: 100px; object-fit: contain" />
                <div>
                  <h5 class="mb-1"><%= item.name %></h5>
                  <p class="mb-1">₹<%= item.price.toFixed(2) %></p>
                </div>
              </div>
              <div class="d-flex align-items-center">
                  <button class="btn btn-outline-dark btn-sm me-2" type="button" onclick="changeQuantity('<%= item.productId %>', -1)"><i class="fa-solid fa-caret-down"></i></button>
                  <input type="number" class="form-control form-control-sm text-center" id="quantity-<%= item.productId %>" value="<%= item.quantity %>" min="1" style="width: 50px;" readonly />
                  <button class="btn btn-outline-dark btn-sm ms-2" type="button" onclick="changeQuantity('<%= item.productId %>', 1)"><i class="fa-solid fa-caret-up"></i></button>
              </div>
            
              <div>
                <p class="mb-1">Subtotal: ₹<%= item.subtotal.toFixed(2) %></p>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p>Your cart is empty.</p>
        <% } %>
      </div>

      <!-- Cart Summary -->
      <div class="col-md-4">
        <div class="cart-summary">
          <h4>Cart Summary</h4>
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal</span>
            <span>₹<%= cart ? cart.items.reduce((acc, item) => acc + item.subtotal, 0).toFixed(2) : '0.00' %></span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>Shipping Charge</span>
            <span>₹<%= cart ? cart.shippingCharge.toFixed(2) : '0.00' %></span>
          </div>
          <div class="d-flex justify-content-between mb-3 total">
            <span>Grand Total</span>
            <span>₹<%= cart ? cart.total.toFixed(2) : '0.00' %></span>
          </div>
          <a href="#" class="btn btn-primary continue-button">Continue to Payment</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/cart.js"></script>