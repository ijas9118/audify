<div class="container my-5 py-5">
  <div class="row">
    <div class="col-md-7 col-12 d-flex align-items-center img-container">
      <img
        src="/images/signin_image.webp"
        alt="Signup Image"
        class="signup-image"
      />
    </div>
    <div class="col-md-5 col-12">
      <div class="form-container">
        <h2>Login to Audify</h2>
        <p class="mb-5">Enter your details below</p>
        <form id="loginForm" action="/login" method="POST">
          <div class="mb-3">
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Email"
            />
            <div id="emailError" class="text-danger mt-2 alert alert-danger" style="display: none;"></div>
          </div>
          <div class="mb-3">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
            />
            <div id="passwordError" class="text-danger mt-2 alert alert-danger" style="display: none;"></div>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="#" class="text-decoration-none"
              >Forgot Password?</a
            >
          </div>
          <button type="submit" class="btn btn-primary w-100 py-2 mt-3">
            Log In
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/login-validation.js"></script>