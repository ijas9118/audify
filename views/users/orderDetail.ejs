<div class="container my-5">
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/account">My Account</a></li>
      <li class="breadcrumb-item active" aria-current="page">Order Details</li>
    </ol>
  </nav>

  <!-- Order Details -->
  <div class="order-card card mb-4">
    <div class="card-body">
      <h5 class="card-title">Order ID: <%= order._id %></h5>
      <p class="card-text">
        <strong>Status:</strong> <span class="badge bg-primary"><%= order.status %></span><br>
        <strong>Address:</strong> <%= order.address.location %>, <%= order.address.city %>, <%= order.address.state %>, <%= order.address.country %> - <%= order.address.zip %><br>
        <strong>Payment Method:</strong> <%= order.paymentMethod %><br>
        <strong>Order Date:</strong> <%= new Date(order.dateOrdered).toDateString() %><br>
        <strong>Shipping Charge:</strong> ₹<%= order.shippingCharge %><br>
        <strong>Total Amount:</strong> ₹<%= order.totalAmount %>
      </p>

      <!-- Ordered Items -->
      <h6 class="mt-3 mb-2">Items:</h6>
      <div class="d-flex flex-wrap">
        <% order.orderItems.forEach(item => { %>
          <div class="d-flex me-3 mb-3" style="width: 200px;">
            <img src="<%= item.product.images.main %>" class="me-2" alt="<%= item.product.name %>">
            <div class="d-flex flex-column">
              <h6 class="mb-1"><%= item.product.name %></h6>
              <p class="mb-0">x<%= item.quantity %> - ₹<%= item.product.price %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

  <!-- Cancel Order Button -->
  <% if (order.status === 'Pending' || order.status === 'Processed') { %>
    <div class="d-flex justify-content-end">
      <form action="/account/order-history/cancel" method="POST" onsubmit="return confirm('Are you sure you want to cancel this order?');">
        <input type="hidden" name="orderId" value="<%= order._id %>" />
        <button type="submit" class="btn btn-danger">Cancel Order</button>
      </form>
    </div>
  <% } %>
</div>