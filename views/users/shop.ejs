    <div class="col-md-3">
      <div class="card">
        <div class="card-body py-5">
          <h5 class="card-title">Filter Products</h5>
          <form>
            <div class="mb-3">
              <label for="category" class="form-label">Category</label>
              <select class="form-select" id="category">
                <option value="">All Categories</option>
                <option value="headphones">Headphones</option>
                <option value="earbuds">Earbuds</option>
                <option value="smartwatches">Speakers</option>
                <option value="smartwatches">Smartwatches</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <div id="price-slider"></div>
              <div class="d-flex justify-content-between mt-2">
                <span id="minPriceValue">$50</span>
                <span id="maxPriceValue">$200</span>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Size</label>
              <div
                class="btn-group w-100"
                role="group"
                aria-label="Size filter"
              >
                <input
                  type="radio"
                  class="btn-check"
                  name="size"
                  id="sizeKids"
                  value="kids"
                  autocomplete="off"
                />
                <label class="btn btn-outline-primary" for="sizeKids"
                  >Kids</label
                >

                <input
                  type="radio"
                  class="btn-check"
                  name="size"
                  id="sizeAdults"
                  value="adults"
                  autocomplete="off"
                  checked
                />
                <label class="btn btn-outline-primary" for="sizeAdults"
                  >Adults</label
                >
              </div>
            </div>
            <button type="submit" class="btn w-100 mt-3 btn-primary">
              Apply Filters
            </button>
          </form>
        </div>
      </div>
    </div>

