<div class="container-fluid my-5">
  <div class="row">
    <!-- Filter Section -->
    <div class="col-md-3">
      <div class="card shadow-sm border-0">
        <div class="card-body py-5">
          <h5 class="card-title text-center">Filter Products</h5>
          <form>
            <!-- Category Filter -->
            <div class="mb-4">
              <label for="category" class="form-label">Category</label>
              <select class="form-select" id="category">
                <option value="">All Categories</option>
                <option value="headphones">Headphones</option>
                <option value="earbuds">Earbuds</option>
                <option value="speakers">Speakers</option>
                <option value="smartwatches">Smartwatches</option>
              </select>
            </div>
            <!-- Price Filter -->
            <div class="mb-4">
              <label for="price" class="form-label">Price</label>
              <div id="price-slider"></div>
              <div class="d-flex justify-content-between mt-2">
                <span id="minPriceValue">$50</span>
                <span id="maxPriceValue">$200</span>
              </div>
            </div>
            <!-- Size Filter -->
            <div class="mb-4">
              <label class="form-label">Size</label>
              <div
                class="btn-group w-100"
                role="group"
                aria-label="Size filter"
              >
                <input
                  type="radio"
                  class="btn-check"
                  name="size"
                  id="sizeKids"
                  value="kids"
                  autocomplete="off"
                />
                <label class="btn btn-outline-dark-purple" for="sizeKids"
                  >Kids</label
                >

                <input
                  type="radio"
                  class="btn-check"
                  name="size"
                  id="sizeAdults"
                  value="adults"
                  autocomplete="off"
                  checked
                />
                <label class="btn btn-outline-dark-purple" for="sizeAdults"
                  >Adults</label
                >
              </div>
            </div>
            <!-- Apply Filters Button -->
            <button type="submit" class="btn w-100 mt-3 btn-dark-purple">
              Apply Filters
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Products Section -->
    <div class="col-md-9">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <!-- Product Card Example -->
        <% products.forEach(product => { %>
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="position-relative">
              <a href="/shop/<%= product._id %>" class="card-link">
                <!-- Discount Badge -->
                <span
                  class="badge bg-danger position-absolute top-0 start-0 m-2"
                  >-20%</span
                >
                <img
                  src="<%= product.images.main %>"
                  class="card-img-top img-fluid"
                  style="height: 200px; object-fit: contain"
                  alt="<%= product.name %>"
                />
              </a>
            </div>
            <div class="card-body">
              <!-- Product Name -->
              <h5 class="card-title text-truncate"><%= product.name %></h5>
              <!-- Product Price -->
              <div class="d-flex align-items-center mb-2">
                <h6 class="card-price mb-0">
                  ₹<%= product.price.toFixed(2) %>
                </h6>
                <span class="text-muted ms-2"
                  ><del>₹<%= (product.price * 1.25).toFixed(2) %></del></span
                >
              </div>
              <!-- Ratings -->
              <div class="mb-2">
                <span class="text-warning">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="far fa-star"></i>
                </span>
                <span class="text-muted">(4.0)</span>
              </div>
              <!-- Short Description -->
              <p class="card-text text-muted text-truncate">
                <%= product.shortDescription %>
              </p>
            </div>
            <div class="card-footer bg-white border-0">
              <div class="btn-group w-100" role="group">
                <!-- Add to Cart Button -->
                <a href="/shop/cart/<%= product._id %>" class="btn btn-dark-purple w-100">Add to Cart</a>
                <!-- Wishlist Button -->
                <a href="#" class="btn btn-outline-dark-purple w-100">
                  <i class="fas fa-heart"></i> Wishlist
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
