<div class="hero-section text-center">
  <div class="container">
    <h1 class="display-3">Discover Your Perfect Product</h1>
    <p class="lead">Browse our collection of top-rated items, carefully selected to suit your needs.</p>
  </div>
</div>

<div class="container-fluid my-5">
  <div class="row">
    <!-- Filter Section -->
    <div class="col-md-3">
      <div class="card shadow-sm border-0 position-sticky" style="top: 100px;">
        <div class="card-body py-5">
          <h5 class="card-title text-center">Filter Products</h5>
          <form action="/shop" method="post">
            <!-- Category Filter -->
            <div class="mb-5">
              <label for="category" class="form-label">Category</label>
              <select class="form-select" id="category" name="category">
                <option value="">All Categories</option>
                <option value="headphones">Headphones</option>
                <option value="earbuds">Earbuds</option>
                <option value="speakers">Speakers</option>
                <option value="smartwatches">Smartwatches</option>
              </select>
            </div>
            <!-- Price Filter -->
            <div class="mb-5">
              <label for="price" class="form-label">Price</label>
              <div id="price-slider"></div>
              <div class="d-flex justify-content-between mt-2">
                <span id="minPriceValue">₹50</span>
                <span id="maxPriceValue">₹200</span>
              </div>
            </div>
            <!-- Sorting Options -->
            <div class="mb-4">
              <label for="sortOptions" class="form-label">Sort By</label>
              <select class="form-select" id="sortOptions" name="sort">
                <option value="popularity">Popularity</option>
                <option value="price-asc">Price: Low to High</option>
                <option value="price-desc">Price: High to Low</option>
                <option value="rating">Average Ratings</option>
                <option value="featured">Featured</option>
                <option value="new">New Arrivals</option>
                <option value="a-z">A - Z</option>
                <option value="z-a">Z - A</option>
              </select>
            </div>
            <!-- Apply Filters Button -->
            <button type="submit" class="btn w-100 mt-3 btn-dark-purple">
              Apply Filters
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Products Section -->
    <div class="col-md-9">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">
        <!-- Product Card Example -->
        <% products.forEach(product => { %>
        <div class="col-md-4 col-sm-6">
          <div
            class="card h-100 shadow-sm border-0 <% if (product.isOutOfStock) { %> out-of-stock <% } %>"
          >
            <div class="position-relative">
              <a href="/shop/<%= product._id %>" class="card-link">
                <!-- Discount Badge -->
                <span
                  class="badge bg-danger position-absolute top-0 start-0 m-2"
                  >-20%</span
                >
                <img
                  src="<%= product.images.main %>"
                  class="card-img-top img-fluid"
                  style="height: 200px; object-fit: contain"
                  alt="<%= product.name %>"
                />
              </a>
            </div>
            <div class="card-body">
              <!-- Product Name -->
              <h5 class="card-title text-truncate"><%= product.name %></h5>
              <!-- Product Price -->
              <div class="d-flex align-items-center mb-2">
                <h6 class="card-price mb-0">₹<%= product.price %></h6>
                <span class="text-muted ms-2"
                  ><del>₹<%= (product.price * 1.25).toFixed(0) %></del></span
                >
              </div>
              <!-- Ratings -->
              <div>
                <span class="text-warning">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="far fa-star"></i>
                </span>
                <span class="text-muted">(4.0)</span>
              </div>
              <div class="d-flex justify-content-between align-items-center ">
                <span class="<%= product.stock === 0 || product.isOutOfStock ? 'text-danger' : 'text-success' %>">
                  <%= product.stock === 0 || product.isOutOfStock ? 'Out of Stock' : product.stock + ' Available' %>
                </span>
              </div>
            </div>
            <div class="card-footer bg-white border-0">
              <div class="btn-group w-100" role="group">
                <!-- Add to Cart Button -->
                <button
                  class="btn btn-dark-purple w-100 <% if (product.isOutOfStock) { %> disabled <% } %>"
                  onclick="addToCart('<%= product._id %>')"
                >
                  Add to Cart
                </button>
                <!-- Wishlist Button -->
                <a
                  href="#"
                  class="btn btn-outline-dark-purple w-100 <% if (product.isOutOfStock) { %> disabled <% } %>"
                >
                  <i class="fas fa-heart"></i> Wishlist
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<style>
  .card.out-of-stock {
    opacity: 0.5;
  }
  .card.out-of-stock .btn {
    pointer-events: none; /* Prevent button clicks */
  }
  .hero-section {
      background: url('/images/banner.jpg') no-repeat center center;
      background-size: cover;
      color: white;
      padding: 60px 0;
    }
    .hero-section h1 {
      font-size: 3rem;
    }
</style>

<script src="/js/cart.js"></script>